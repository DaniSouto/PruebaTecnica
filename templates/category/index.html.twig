{% extends 'base.html.twig' %}
{% block main %}
    <div class="text-center pt-5 pb-5">
        <h2>{{ 'categories'|trans|capitalize }}</h2>
        <table class="table table-striped mt-3">
            <thead class="table-dark">
            <th>#</th>
            <th class="text-start">{{ 'name'|trans|capitalize }}</th>
            <th class="text-end">{{ 'actions'|trans|capitalize }}</th>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td class="text-start">{{ category.name }}</td>
                    <td class="text-end">
                        <a href="{{ path('app.category.view', {     'id': category.id }) }}" class="action-button me-2"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('app.category.remove', {   'id': category.id }) }}" class="action-button me-2"><i class="fas fa-trash-alt"></i></a>
                        <a href="{{ path('app.category.edit', {     'id': category.id }) }}" class="action-button me-2"><i class="fas fa-pencil-alt"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="div-buttons">
            <a href="{{ path('app.category.create') }}" class="btn btn-bibliotech btn-create">{{ 'create'|trans|capitalize }}</a>
        </div>

        {% include 'partials/_msg.html.twig' %}

    </div>
{% endblock %}