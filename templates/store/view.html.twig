{% extends 'base.html.twig' %}
{% block main %}
    <div class="text-center pt-5 pb-5">
        <h2>{{ 'store'|trans|capitalize }}</h2>
        <div class="container text-start">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-3">
                    <div class="mb-3">
                        <h3>{{ 'name'|trans|capitalize }}</h3>
                        <span>{{ store is defined ? store.name : '' }}"</span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="mb-3">
                        <h3>{{ 'city'|trans|capitalize }}</h3>
                        <span>{{ store is defined ? store.city : '' }}"</span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="mb-3">
                        <h3>{{ 'priority'|trans|capitalize }}</h3>
                        <span>{{ store is defined ? store.priority : 0 }}</span>
                    </div>
                </div>
                <div class="col-1"></div>
                <div class="col-2"></div>
                <div class="col-6">
                    <div class="mb-12">
                        <h3>{{ 'address'|trans|capitalize }}</h3>
                        <span>{{ store is defined ? store.address : "" }}</span>
                    </div>
                </div>
            </div>

            <div class="row">
                <h3 class="table-extra">{{ 'stock'|trans|capitalize }}</h3>
                {% include 'stock/table_list.html.twig' with {'hasCrudAction':true, 'hasUnitsColumn':false} %}
            </div>


            <div class="div-buttons">
                <a href="{{ path('app.category.index') }}" class="btn btn-bibliotech btn-bibliotech-back">{{ 'back'|trans|capitalize }}</a>
                <a href="{{ path('app.stock.create') }}" class="btn btn-bibliotech btn-create">{{ 'add stock'|trans|capitalize }}</a>
            </div>
        </div>
    </div>
{% endblock %}